@model ProjetStudeal_Final.Models.MeetingRequest

@{
    ViewData["Title"] = "Inscription";
}

<div>
    <a asp-action="Index">Accueil</a>
</div>

<h2>Inscription</h2>

<h4>MeetingRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Inscription">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TimeSlotId" class="control-label"></label>
                <select asp-for="TimeSlotId" class="form-control" asp-items="ViewBag.TimeSlotId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
