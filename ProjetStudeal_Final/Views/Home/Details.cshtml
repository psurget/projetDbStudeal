@model ProjetStudeal_Final.Models.Member

@{
    ViewData["Title"] = "Détails";
}

<h2> Bienvenue @Model.FirstName </h2>

<div>
    <h4>Détails</h4>
    <pre>@Html.DisplayFor(model => model.Id)</pre>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Prénom
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            Nom de famille
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Utilisateur
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            Mot de passe
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt>
            Tuteur ?
        </dt>
        <dd>           
            @((Model.IsTutor)==1)?"Oui":"Non";          
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Éditer", "MemberEdit", new { id = Model.Id}) |
    <a asp-action="Index">Retour à l'accueil</a>
</div>
